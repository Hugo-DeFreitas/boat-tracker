<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            fancy:mfb_borderColor="#FFFFFF"
            fancy:mfb_defaultColor="@color/grayForTitle"
            fancy:mfb_focusColor="@color/grayForTitle"
            fancy:mfb_fontIconSize="20dp"
            fancy:mfb_icon="@string/fawi_ship"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="30dp"
            fancy:mfb_text="CrÃ©ation d'un nouveau bateau"
            fancy:mfb_textSize="20dp">

        </com.rilixtech.materialfancybutton.MaterialFancyButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:textAlignment="center"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_defaultColor="@color/colorPrimary"
                fancy:mfb_focusColor="@color/colorPrimary"
                fancy:mfb_fontIconSize="20dp"
                fancy:mfb_icon="@string/fawi_anchor"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="10dp"
                fancy:mfb_text="@string/boat_name_title"
                fancy:mfb_textSize="15dp" />

            <EditText
                android:id="@+id/new_boat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:textAlignment="center"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_defaultColor="@color/colorPrimary"
                fancy:mfb_focusColor="@color/colorPrimary"
                fancy:mfb_fontIconSize="20dp"
                fancy:mfb_icon="@string/fawi_info_circle"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="10dp"
                fancy:mfb_text="Description du bateau"
                fancy:mfb_textSize="15dp" />

            <EditText
                android:id="@+id/new_boat_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:textAlignment="center"
            fancy:mfb_borderColor="#FFFFFF"
            fancy:mfb_defaultColor="@color/colorAccent"
            fancy:mfb_focusColor="@color/colorAccent"
            fancy:mfb_fontIconSize="20dp"
            fancy:mfb_icon="@string/fawi_anchor"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="10dp"
            fancy:mfb_text="Port d'attache du bateau"
            fancy:mfb_textSize="15dp" />

        <Spinner
            android:id="@+id/new_boat_origin_harbor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tooltipText="Choix du port d'origine." />

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:textAlignment="center"
            fancy:mfb_borderColor="#FFFFFF"
            fancy:mfb_defaultColor="@color/colorAccent"
            fancy:mfb_focusColor="@color/colorAccent"
            fancy:mfb_fontIconSize="20dp"
            fancy:mfb_icon="@string/fawi_anchor"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="10dp"
            fancy:mfb_text="Capitaine"
            fancy:mfb_textSize="15dp" />

        <Spinner
            android:id="@+id/new_boat_captain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tooltipText="Choix du port d'origine." />

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:textAlignment="center"
            fancy:mfb_borderColor="#FFFFFF"
            fancy:mfb_defaultColor="@color/colorAccent"
            fancy:mfb_focusColor="@color/colorAccent"
            fancy:mfb_fontIconSize="20dp"
            fancy:mfb_icon="@string/fawi_anchor"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="10dp"
            fancy:mfb_text="Type de bateau"
            fancy:mfb_textSize="15dp" />

        <Spinner
            android:id="@+id/new_boat_boat_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tooltipText="Choix du port d'origine." />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:textAlignment="center"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_defaultColor="@color/colorPrimary"
                fancy:mfb_focusColor="@color/colorPrimary"
                fancy:mfb_fontIconSize="20dp"
                fancy:mfb_icon="@string/fawi_map_marker"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="10dp"
                fancy:mfb_text="Latitude"
                fancy:mfb_textSize="15dp" />

            <EditText
                android:id="@+id/new_boat_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:inputType="numberSigned"
                android:text="0.000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:textAlignment="center"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_defaultColor="@color/colorPrimary"
                fancy:mfb_focusColor="@color/colorPrimary"
                fancy:mfb_fontIconSize="20dp"
                fancy:mfb_icon="@string/fawi_map_marker"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="10dp"
                fancy:mfb_text="Longitude"
                fancy:mfb_textSize="15dp" />

            <EditText
                android:id="@+id/new_boat_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:inputType="numberSigned"
                android:text="0.000" />
        </LinearLayout>


        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/save_new_boat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            fancy:mfb_borderColor="#FFFFFF"
            fancy:mfb_defaultColor="@color/colorEditButtons"
            fancy:mfb_focusColor="@color/colorEditButtonsPressed"
            fancy:mfb_fontIconSize="20dp"
            fancy:mfb_icon="@string/fawi_check_circle"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="30dp"
            fancy:mfb_text="Enregistrer"
            fancy:mfb_textSize="20dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>